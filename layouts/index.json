{{- $index := slice -}}
{{- range .Site.RegularPages -}}
    {{- $dir := "" -}}
    {{- with .File -}}{{- $dir = .Dir -}}{{- end -}}
    {{- $searchContent := printf "%s %s" .Plain $dir -}}
    {{- $pageData := dict "title" .Title "link" .RelPermalink "content" $searchContent "summary" (.Summary | plainify) -}}
    {{- $index = $index | append $pageData -}}
{{- end -}}
{{- $index | jsonify -}}